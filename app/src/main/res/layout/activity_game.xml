<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:id="@+id/canvas"
    android:layout_gravity="center"
    android:background="#E1F5FE"
    >


    <LinearLayout
        android:id="@+id/all_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/game_title_width"
                android:layout_height="wrap_content"
                android:src="@drawable/game_title"
                android:layout_alignParentLeft="true"/>
            <!--<Button-->
                <!--android:id="@+id/game_btn_menu"-->
                <!--android:layout_width="@dimen/game_btn"-->
                <!--android:layout_height="@dimen/game_btn"-->
                <!--android:background="@drawable/game_menu"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:singleLine="true" />-->
            <Button
                android:id="@+id/game_btn_pause"
                android:layout_width="@dimen/game_btn"
                android:layout_height="@dimen/game_btn"
                android:background="@drawable/game_pause"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:singleLine="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/game_score_height"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/score_score_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/game_score_score"
                android:text="--"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/game_score_text"
                android:paddingBottom="10dp" />
            <TextView
                android:id="@+id/score_highest_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/game_score_highest"
                android:text="--"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/game_score_text"
                android:paddingBottom="10dp"/>
            <TextView
                android:id="@+id/score_time_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/game_score_time"
                android:text="-:-"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/game_score_text"
                android:paddingBottom="10dp"/>
            <TextView
                android:id="@+id/score_step_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/game_score_step"
                android:text="--"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/game_score_text"
                android:paddingBottom="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">
            <LinearLayout
                android:id="@+id/ori_layout_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/game_block_width"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/ori_image_01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/block_0"/>
                <ImageView
                    android:id="@+id/ori_image_02"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/block_0"/>
                <ImageView
                    android:id="@+id/ori_image_03"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/block_0"/>
                <ImageView
                    android:id="@+id/ori_image_04"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/block_0"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/game_block_width"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/ori_image_05"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/block_0"/>
                <ImageView
                    android:id="@+id/ori_image_06"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/block_0"/>
                <ImageView
                    android:id="@+id/ori_image_07"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/block_0"/>
                <ImageView
                    android:id="@+id/ori_image_08"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/block_0"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/game_block_width"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/ori_image_09"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/block_0"/>
                <ImageView
                    android:id="@+id/ori_image_10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/block_0"/>
                <ImageView
                    android:id="@+id/ori_image_11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/block_0"/>
                <ImageView
                    android:id="@+id/ori_image_12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/block_0"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/game_block_width"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/ori_image_13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/block_0"/>
                <ImageView
                    android:id="@+id/ori_image_14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/block_0"/>
                <ImageView
                    android:id="@+id/ori_image_15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/block_0"/>
                <ImageView
                    android:id="@+id/ori_image_16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/block_0"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/hover_layout"
        android:background="#bbffffff">
        <Button
            android:id="@+id/btn_start"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:background="#01579B"
            android:singleLine="true"
            android:text="START"
            android:textColor="#ffffff"
            android:textSize="60sp"/>
    </RelativeLayout>

</RelativeLayout>
