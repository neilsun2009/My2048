<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#02A9F3" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="@dimen/main_title_weight"
            android:layout_height="@dimen/main_title_height"
            android:layout_marginBottom="25dp"
            android:src="@drawable/main_title"
            android:layout_gravity="center_horizontal"/>
        <RelativeLayout
            android:layout_width="@dimen/main_block_big"
            android:layout_height="@dimen/main_block_big"
            android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/main_resume_button"
                android:layout_width="@dimen/main_block_small"
                android:layout_height="@dimen/main_block_small"
                android:background="@drawable/main_resume_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <Button
                android:id="@+id/main_play_button"
                android:layout_width="@dimen/main_block_small"
                android:layout_height="@dimen/main_block_small"
                android:background="@drawable/main_play_button"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>
            <Button
                android:id="@+id/main_clock_button"
                android:layout_width="@dimen/main_block_small"
                android:layout_height="@dimen/main_block_small"
                android:background="@drawable/main_clock_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"/>
            <Button
                android:id="@+id/main_rank_button"
                android:layout_width="@dimen/main_block_small"
                android:layout_height="@dimen/main_block_small"
                android:background="@drawable/main_rank_button"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"></FrameLayout>
    </LinearLayout>
</RelativeLayout>
